/**index.wxss**/
.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 0;
  background-color:#4783b8;
  width: 100%;
}
.header_img{
  height: 220rpx;
  width: 220rpx;
  background-color: #fff;
  margin-left: 40rpx;
}
.header_right{
  display: flex;
  height: 200rpx;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.my_job{
  width: 100%;
  padding-left: 20rpx;
  border: 1rpx #fff solid;
  background-color: #d5d5d5;
}
.my_job_content{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:stretch;
  flex-wrap: wrap;
}
.my_job_item{
  width: 31%;
  height: 150rpx;
  margin: 16rpx 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.my_job_item_text{
  font-size: 12px;
}
.my_job_item_image{
  width: 110rpx;
  height: 110rpx;
}
.my_job_submenu{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.my_job_submenu_item{
  width:49%;
  height: 60rpx;
  padding: 10rpx 0;
  align-items: center;
  line-height: 60rpx;
  border: 1rpx #d5d5d5 solid;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
}
.my_job_submenu_item_img{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  margin-left: 20rpx;
}
.my_job_submenu_item_txt{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
