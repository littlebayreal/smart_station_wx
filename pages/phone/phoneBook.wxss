/* pages/phone/phoneBook.wxss */

.search_view {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  width: 80%;
  border: 1rpx #d5d5d5 solid;
  height: 50rpx;
  border-radius: 10rpx;
  padding: 10rpx;
}

.search_input {
  width: 70%;
}

.search_img {
  height: 30rpx;
  width: 30rpx;
  padding: 10rpx;
}

.contact_box {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-top: 50rpx;
}

.contact_list {
  width: 100%;
  height: 80%;
}

.scroll_view_class {
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.contact_sidebar {
  width: 10%;
  position: fixed;
  right: 10rpx;
  height: 86%;
  font-family: Arial, Helvetica, sans-serif;
  background: transparent;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
}

.contact_sidebar_item {
  width: 100%;
  height: 45rpx;
  font-size: 30rpx;
  text-align: center;
}

.letter_index_view {
  height: 40rpx;
  margin-bottom: 30rpx;
  background-color: #4783b8;
  padding: 10rpx;
}

.user_view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  margin-bottom: 30rpx;
  border-bottom: 1rpx #d5d5d5 solid;
}

.user_view_img {
  width: 60rpx;
  height: 60rpx;
}

.user_view_txt {
  margin-left: 10rpx;
}
